# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# IMAP Configuration (for bug monitoring)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=exiledev8668@gmail.com
IMAP_PASS=your-app-specific-password

# Android Signing (paths relative to project)
KEYSTORE_FILE=../android-keys/release.keystore
KEYSTORE_PASSWORD=your-keystore-password
KEY_ALIAS=release
KEY_PASSWORD=your-key-password

# Google Play Store
PLAY_STORE_SERVICE_ACCOUNT_JSON=../credentials/play-store-key.json

# Test Environment
TEST_URL=http://localhost:3001
HEADLESS=true

# Database (if needed)
DATABASE_URL=your-database-connection-string

# API Keys
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_KEY=your-analytics-key