{
  "name": "second-chance-recovery",
  "version": "1.0.0-beta",
  "type": "module",
  "description": "Second Chance - Recovery support app with comprehensive crisis intervention features",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:mobile": "npx playwright test --project='Mobile Chrome' --project='Mobile Safari' --project='Android Chrome'",
    "test:e2e:desktop": "npx playwright test --project='chromium' --project='firefox' --project='webkit'",
    "test:e2e:critical": "npx playwright test tests/e2e/01-crisis-support.e2e.ts tests/e2e/02-user-auth.e2e.ts tests/e2e/03-recovery-tracking.e2e.ts",
    "test:crisis": "npx playwright test tests/e2e/crisis-support/",
    "test:privacy": "npx playwright test tests/e2e/privacy/",
    "test:offline": "npx playwright test tests/e2e/offline/",
    "test:visual": "npx playwright test tests/visual-regression/",
    "test:performance": "npx playwright test tests/performance/",
    "lighthouse": "npx lighthouse-ci autorun",
    "test:all": "npm run test:run && npm run test:e2e && npm run lighthouse",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:ci": "npm run test:comprehensive",
    "synthetic:start": "node scripts/synthetic-monitoring.js",
    "synthetic:stop": "node scripts/synthetic-monitoring.js --stop",
    "monitoring:start": "node scripts/monitoring.js",
    "monitoring:logs": "node scripts/log-monitor.js",
    "bugreporter:test": "node scripts/bug-reporter-test.js",
    "automation:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-automation.ps1",
    "automation:test": "powershell -ExecutionPolicy Bypass -File ./scripts/test-automation.ps1",
    "automation:monitor": "powershell -ExecutionPolicy Bypass -File ./scripts/monitor-automation.ps1",
    "start": "node working-server.js"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@supabase/supabase-js": "^2.52.1",
    "@tanstack/react-query": "^5.56.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.18.2",
    "idb": "^8.0.3",
    "lucide-react": "^0.263.1",
    "next-themes": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.26.2",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "allure-playwright": "^2.15.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^26.1.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.14",
    "@types/nodemailer": "^6.4.15",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0",
    "winston": "^3.11.0",
    "@types/winston": "^2.4.4"
  }
}